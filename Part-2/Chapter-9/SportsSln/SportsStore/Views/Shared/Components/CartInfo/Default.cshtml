@model Cart
<div>
    @if (Model.CartLines.Count() > 0)
    {
        <small class="navbar-text">
            <b>Your Cart:</b>
            @Model.CartLines.Sum(x=>x.Quantity) items(s)
            @Model.ComputeTotalValue().ToString("c")

        </small>        
    }
    <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/Cart" asp-route-urlPath ="@ViewContext.HttpContext.Request.PathAndQuery()">
        <i class="fa fa-shopping-cart"></i>

    </a>
</div>