
@model PartInvite.Models.GuestResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=devicd-width" />
        <title>
            RsvpForm
        </title>
        <link rel="stylesheet" href="/css/static.css" />
        <link rel="stylesheet" href ="/lib/bootstrap/dist/css/bootstrap.css" />
    </head>
    <body>
        <div>
            <h5 class="text-center text-white bg-primary m-2 p-2">RSVP</h5>
            <form class="form" method="post" class ="m-2">
                <div class="Validations" asp-validation-summary="All">
                </div>
                <div class="form-group">
                    <label asp-for="Name" class ="form-label"></label>
                    <input asp-for ="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Email" class = "form-label"></label>
                    <input asp-for="Email" />
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class = "form-label"></label>
                    <input asp-for="Phone" />
                </div>
                <div>
                    <select asp-for = "WillAttend" class="form-select">
                        <option value="" selected >Select An option</option>
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </body>
</html>
